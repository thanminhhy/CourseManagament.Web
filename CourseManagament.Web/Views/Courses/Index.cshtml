@model IEnumerable<CourseManagament.Web.Models.Course>
@{
    ViewBag.Title = "Index";
}

<h2>Course Management</h2>
<div class="form-group">
    @Html.ActionLink("Create a new course", "CreateCourse", "Courses", new { @class = "btn btn-primary" })
</div>
@using (Html.BeginForm("Index", "Courses", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchString", null, new { @class = "form-control" })
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">CourseName</th>
            <th scope="col">StartDate</th>
            <th scope="col">Category</th>
            <th scope="col">Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.CourseName</td>
                <td>@item.DateTime</td>
                <td>@item.CourseCategory.CategoryName</td>
                <td>@item.Description</td>

                <td>
                    @Html.ActionLink("Delete", "DeleteTrainee", "TrainingStaffs", new { id = item.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Edit", "EditTrainee", "TrainingStaffs", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>