@model CourseManagament.Web.ViewModels.CourseCategoriesViewModels
@{
    ViewBag.Title = "Edit";
}

<h2>Edit Course</h2>
@using (Html.BeginForm("Edit", "Courses", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
@Html.ValidationSummary(true, "", new { @class = "text-danger" })
@Html.HiddenFor(m => m.Course.Id)
<div class="form-group">
    <label>Course Name</label>
    @Html.TextBoxFor(m => m.Course.CourseName, "", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Course.CourseName, "",
            new { @class = "text-danger" }
        )
</div>
<div class="form-group">
    <label>Due Date</label>
    @Html.EditorFor(m => m.Course.DateTime, "", new { @class = "form-control", type = "date" })
    @Html.ValidationMessageFor(m => m.Course.DateTime, "",
            new { @class = "text-danger" }
        )
</div>
<div class="form-group">
    <label>Category</label>
    @Html.DropDownListFor(m => m.Course.CategoryId,
          new SelectList(Model.Categories, "Id", "CategoryName"),
          new { @class = "form-control" }
        )
</div>
<button type="submit" class="btn btn-primary">Edit</button>
}