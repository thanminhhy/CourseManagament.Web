@model CourseManagament.Web.ViewModels.CourseCategoriesViewModels

<h2>Create A New Course</h2>
@using (Html.BeginForm("CreateCourse", "Courses", FormMethod.Post))
{
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        <label>Course Name</label>
        @Html.TextBoxFor(m => m.Course.CourseName, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Course.CourseName, "",
             new { @class = "text-danger" }
         )
    </div>
    <div class="form-group">
        <label>Started Date</label>
        @Html.TextBoxFor(m => m.Course.DateTime, "", new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Course.DateTime, "",
             new { @class = "text-danger" }
         )
    </div>
    <div class="form-group">
        <label>Category</label>
        @Html.DropDownListFor(m => m.Course.CategoryId,
          new SelectList(Model.Categories, "Id", "CategoryName"),
          new { @class = "form-control" }
        )
    </div>
    <button type="submit" class="btn btn-primary">Create</button>
}