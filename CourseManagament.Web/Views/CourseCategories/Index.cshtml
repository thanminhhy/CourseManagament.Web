@model IEnumerable<CourseManagament.Web.Models.CourseCategory>
@{
    ViewBag.Title = "Index";
}

<h2>Course Categories</h2>
<div class="form-group">
    @Html.ActionLink("Create a new course category", "Create", "CourseCategories", new { @class = "btn btn-primary" })
</div>
@using (Html.BeginForm("Index", "CourseCategories", FormMethod.Get))
{
    <div class="form-group">
        @Html.TextBox("searchString", null, new { @class = "form-control" })
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
}
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">ID</th>
            <th scope="col">Category Name</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <td>@item.CategoryName</td>
                <td>
                    @Html.ActionLink("Delete", "Delete", "CourseCategories", new { id = item.Id }, new { @class = "btn btn-danger" })
                    @Html.ActionLink("Edit", "Edit", "CourseCategories", new { id = item.Id }, new { @class = "btn btn-success" })
                </td>
            </tr>
        }
    </tbody>
</table>